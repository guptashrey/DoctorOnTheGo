<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.shreygupta.doctoronthego.fragment.PatientBookAppointmentFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/fname"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/signup_hint_1"
                    android:inputType="textPersonName"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    />

                <EditText
                    android:id="@+id/lname"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/signup_hint_2"
                    android:inputType="textPersonName"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>
            </LinearLayout>


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/signup_hint_3"
                android:inputType="textEmailAddress"
                android:layout_margin="10dp"
                android:padding="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Appointment Date"
                android:clickable="true"
                android:id="@+id/datepicker"
                android:layout_margin="10dp"
                android:padding="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:hint="Select Appointment Time"
                android:id="@+id/timepicker"
                android:layout_margin="10dp"
                android:padding="10dp"/>


            <ListView
                android:id="@+id/doclist"
                android:layout_width="match_parent"
                android:layout_height="300dp">

            </ListView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_gravity="center"
                android:id="@+id/submit"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>